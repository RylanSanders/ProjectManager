<Window x:Class="ProjectManager.Contracts.AddTODOContract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManager.Contracts"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="AddTODOContract" Height="0" Width="0" ResizeMode="NoResize"
        >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/ResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Width="400">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Name" Grid.Column="0" Grid.Row="0" Foreground="{DynamicResource MaterialDesignDarkForeground}" VerticalAlignment="Center"/>
        <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="0" Foreground="{DynamicResource MaterialDesignDarkForeground}"/>
        <TextBlock Text="Description" Grid.Column="0" Grid.Row="1" Foreground="{DynamicResource MaterialDesignDarkForeground}" VerticalAlignment="Center"/>
        <TextBox x:Name="DescriptionTextBox" Grid.Column="1" Grid.Row="1" Foreground="{DynamicResource MaterialDesignDarkForeground}"/>
        <TextBlock Text="Parent Project" Grid.Column="0" Grid.Row="2" Foreground="{DynamicResource MaterialDesignDarkForeground}" VerticalAlignment="Center"/>
        <ComboBox x:Name="ParentProjectComboBox" Grid.Column="1" Grid.Row="2" Foreground="{DynamicResource MaterialDesignDarkForeground}" DisplayMemberPath="Name" />
        <TextBlock Text="Due Date" Grid.Column="0" Grid.Row="3" Foreground="{DynamicResource MaterialDesignDarkForeground}" VerticalAlignment="Center"/>
        <DatePicker x:Name="DueDatePicker" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Grid.Column="1" Grid.Row="3"/>
        <Expander Grid.Row="4" Grid.ColumnSpan="2" Header="Reoccuring" Foreground="{DynamicResource MaterialDesignDarkForeground}" VerticalAlignment="Stretch">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="StartDateTime"  Foreground="{DynamicResource MaterialDesignDarkForeground}" Text="Start Date" />
                <DatePicker x:Name="StartDateTimePicker" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Grid.Column="1" Grid.Row="0" Margin="-30,0,30,0"/>
                <TextBlock x:Name="EndDateTime" Foreground="{DynamicResource MaterialDesignDarkForeground}" Grid.Column="2" Text="End Date"/>
                <DatePicker x:Name="EndDateTimePicker" Style="{StaticResource MaterialDesignOutlinedDatePicker}" Grid.Column="3" Grid.Row="0" Margin="-30,0,30,0"/>
                <ComboBox x:Name="IntervalComboBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="0,0,0,15"/>
            </Grid>
        </Expander>
        <Button x:Name="DoneButton" Grid.Row="5" Grid.ColumnSpan="2" Content="Done" Click="DoneButton_Click" Style="{StaticResource GreenPurpleHoverButton}" Height="40" Margin="0,0,0,0"/>
    </Grid>
</Window>
